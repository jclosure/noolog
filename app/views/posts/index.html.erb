<h2><strong>Your Blog Posts</strong></h2>

<table>
  <tr>
    <th style="border-bottom: 1px solid black">Name</th>
    <th style="border-bottom: 1px solid black">Title</th>
    <th style="border-bottom: 1px solid black">Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td nowrap="nowrap"><strong><%= post.name %></strong></td>
    <td nowrap="nowrap"><strong><%= post.title %></strong></td>
    <td><%= post.content %></td>
    <td nowrap="nowrap"><span> &nbsp; </span><%= link_to 'Show', post %><span> | </span></td>
    <td nowrap="nowrap"><%= link_to 'Edit', edit_post_path(post) %><span> | </span></td>
    <td nowrap="nowrap"><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
